#:kivy 1.9.1

<Instructions>:
    name: 'Instructions'

    BoxLayout:
        orientation: "vertical"

        ActionBar:
            id: actionbar

            ActionView:
                use_separator: True

                ActionPrevious:
                    id: action_previous
                    title: ''
                    app_icon: ''
                    app_icon_width: 0.1
                    app_icon_height: 0
                    with_previous: False

                ActionOverflow:

                ActionButton:
                    text: 'Back to menu'
                    on_release: root.menu()

        RstDocument:
            id: rst_doc
